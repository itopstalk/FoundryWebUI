@page
@model FoundryWebUI.Pages.ModelsModel
@{
    ViewData["Title"] = "Models";
}

<div class="d-flex flex-column h-100 p-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>üì¶ Model Management</h3>
        <div class="d-flex gap-2">
            <button id="btn-download-selected" class="btn btn-sm btn-primary" disabled>‚¨áÔ∏è Download Selected (<span id="selected-count">0</span>)</button>
            <button id="btn-refresh" class="btn btn-sm btn-outline-light">üîÑ Refresh</button>
        </div>
    </div>

    <!-- Download Progress -->
    <div id="download-progress" class="card mb-3 d-none">
        <div class="card-body">
            <h6 id="download-model-name" class="card-title">Downloading...</h6>
            <div class="progress" style="height: 24px;">
                <div id="download-bar" class="progress-bar progress-bar-striped progress-bar-animated"
                     role="progressbar" style="width: 0%;">0%</div>
            </div>
            <small id="download-status" class="text-muted mt-1 d-block"></small>
        </div>
    </div>

    <!-- Models Table -->
    <div class="card flex-grow-1 overflow-hidden">
        <div class="card-body p-0 overflow-auto">
            <table class="table table-hover mb-0">
                <thead class="sticky-top" style="background: var(--bs-body-bg); z-index: 1;">
                    <tr>
                        <th style="width: 40px;">
                            <input type="checkbox" id="select-all" class="form-check-input" title="Select all available models" />
                        </th>
                        <th class="sortable" data-sort="name" role="button">Model <span class="sort-icon"></span></th>
                        <th class="sortable" data-sort="status" role="button">Status <span class="sort-icon"></span></th>
                        <th class="sortable" data-sort="size" role="button">Size <span class="sort-icon"></span></th>
                        <th class="sortable" data-sort="ram" role="button">Est. RAM <span class="sort-icon"></span></th>
                        <th class="sortable" data-sort="canRun" role="button">Can Run <span class="sort-icon"></span></th>
                        <th class="sortable" data-sort="device" role="button">Device <span class="sort-icon"></span></th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="models-table-body">
                    <tr>
                        <td colspan="8" class="text-center text-muted py-4">Loading models...</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/models.js" asp-append-version="true"></script>
}
