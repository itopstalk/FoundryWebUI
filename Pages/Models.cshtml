@page
@model FoundryWebUI.Pages.ModelsModel
@{
    ViewData["Title"] = "Models";
}

<div class="p-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>üì¶ Model Management</h3>
        <div class="d-flex gap-2">
            <select id="provider-filter" class="form-select form-select-sm" style="width: auto;">
                <option value="">All Providers</option>
                <option value="foundry">Foundry Local</option>
                <option value="ollama">Ollama</option>
            </select>
            <button id="btn-refresh" class="btn btn-sm btn-outline-light">üîÑ Refresh</button>
        </div>
    </div>

    <!-- Pull Model (Ollama) -->
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">Download / Pull Model</h5>
            <div class="row g-2 align-items-end">
                <div class="col-auto">
                    <label class="form-label">Provider</label>
                    <select id="download-provider" class="form-select form-select-sm">
                        <option value="foundry">Foundry Local</option>
                        <option value="ollama">Ollama</option>
                    </select>
                </div>
                <div class="col">
                    <label class="form-label">Model Name / ID</label>
                    <input id="download-model-id" type="text" class="form-control form-control-sm"
                           placeholder="e.g. phi-3.5-mini or llama3.2:latest" />
                </div>
                <div class="col-auto">
                    <button id="btn-download" class="btn btn-sm btn-primary">‚¨áÔ∏è Download</button>
                </div>
            </div>
            <div id="download-progress" class="mt-2 d-none">
                <div class="progress" style="height: 24px;">
                    <div id="download-bar" class="progress-bar progress-bar-striped progress-bar-animated"
                         role="progressbar" style="width: 0%;">0%</div>
                </div>
                <small id="download-status" class="text-muted"></small>
            </div>
        </div>
    </div>

    <!-- Models Table -->
    <div class="card">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Model</th>
                        <th>Provider</th>
                        <th>Status</th>
                        <th>Size</th>
                        <th>Parameters</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="models-table-body">
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">Loading models...</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/models.js" asp-append-version="true"></script>
}
