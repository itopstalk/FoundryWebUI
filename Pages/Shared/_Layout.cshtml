<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FoundryLocalWebUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FoundryWebUI.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Top navbar -->
    <header>
        <nav class="navbar border-bottom shadow-sm px-3" style="height: 48px;">
            <div class="d-flex align-items-center w-100">
                <button id="sidebar-toggle" class="btn btn-sm btn-outline-secondary me-2 d-flex align-items-center" title="Toggle sidebar">
                    <span style="font-size:1.2rem;">‚ò∞</span>
                </button>
                <a class="navbar-brand fw-bold mb-0" asp-area="" asp-page="/Index">
                    <span class="me-1">ü§ñ</span>FoundryLocalWebUI
                </a>
                <a class="text-muted small text-decoration-none ms-2 d-none d-md-inline"
                   href="https://github.com/itopstalk/FoundryLocalWebUI" target="_blank" rel="noopener"
                   title="View on GitHub">
                    <span class="opacity-75">üìÇ github.com/itopstalk/FoundryLocalWebUI</span>
                </a>
                <div class="ms-auto d-flex align-items-center gap-2">
                    <span id="foundry-nav-status" class="d-inline-flex align-items-center gap-1" title="Checking...">
                        <span id="foundry-nav-light" style="display:inline-block;width:12px;height:12px;border-radius:2px;background:#6c757d;"></span>
                        <span class="small fw-semibold">Foundry Local Connection</span>
                    </span>
                </div>
            </div>
        </nav>
    </header>

    <div class="d-flex" style="height: calc(100vh - 48px);">
        <!-- Sidebar -->
        <nav id="sidebar" class="border-end d-flex flex-column" style="width: 220px; min-width: 220px; background: var(--bs-body-bg); transition: margin-left 0.2s;">
            <div class="p-2 flex-grow-1">
                <ul class="nav nav-pills flex-column gap-1">
                    <li class="nav-item">
                        <a class="nav-link sidebar-link @(ViewData["Title"]?.ToString() == "Chat" ? "active" : "")" asp-area="" asp-page="/Index">
                            <span class="me-2">üí¨</span>Chat
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link sidebar-link @(ViewData["Title"]?.ToString() == "Models" ? "active" : "")" asp-area="" asp-page="/Models">
                            <span class="me-2">üì¶</span>Models
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link sidebar-link @(ViewData["Title"]?.ToString() == "Logs" ? "active" : "")" asp-area="" asp-page="/Logs">
                            <span class="me-2">üìã</span>Logs
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link sidebar-link @(ViewData["Title"]?.ToString() == "Settings" ? "active" : "")" asp-area="" asp-page="/Settings">
                            <span class="me-2">‚öôÔ∏è</span>Settings
                        </a>
                    </li>
                </ul>
            </div>
            <div class="p-2 border-top small text-muted text-center">
                FoundryLocalWebUI v1.0
            </div>
        </nav>

        <!-- Main content -->
        <main role="main" class="flex-grow-1 overflow-hidden">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>